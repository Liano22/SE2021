<?xml version="1.0" encoding="utf-8"?>

<!-- Nils Behrens -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/owner_item_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/owner_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:text="Hund Name"
        app:layout_constraintStart_toEndOf="@+id/owner_item_image"
        app:layout_constraintTop_toTopOf="@+id/owner_item_image" />

    <TextView
        android:id="@+id/owner_item_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Rasse, Alter, Geschlecht"
        android:textSize="11sp"
        app:layout_constraintStart_toStartOf="@+id/owner_item_name"
        app:layout_constraintTop_toBottomOf="@+id/owner_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>