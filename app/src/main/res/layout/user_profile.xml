<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_owner_bio"
        android:layout_width="393dp"
        android:layout_height="114dp"
        android:layout_marginTop="8dp"
        android:text="Bio:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

    <View
        android:id="@+id/view4"
        android:layout_width="450dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/owner_image"
        tools:layout_editor_absoluteX="-20dp" />

    <TextView
        android:id="@+id/text_listed_dogs"
        android:layout_width="411dp"
        android:layout_height="34dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:paddingLeft="26dp"
        android:paddingTop="2dp"
        android:text="Gelistete Hunde"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_owner_bio" />

    <ImageView
        android:id="@+id/owner_image"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_owner_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="Hunderbesitzer Name"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/owner_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_owner_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Amateur ZÃ¼chter seit 3 Jahren"
        app:layout_constraintStart_toStartOf="@+id/text_owner_name"
        app:layout_constraintTop_toBottomOf="@+id/text_owner_name" />

    <TextView
        android:id="@+id/text_owner_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="aus Ort, PLZ"
        app:layout_constraintStart_toStartOf="@+id/text_owner_status"
        app:layout_constraintTop_toBottomOf="@+id/text_owner_status" />

    <TextView
        android:id="@+id/text_owner_phone_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telefonnummer:"
        app:layout_constraintStart_toStartOf="@+id/text_owner_place"
        app:layout_constraintTop_toBottomOf="@+id/text_owner_place" />
</androidx.constraintlayout.widget.ConstraintLayout>