<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/searchDogName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lulu"
        app:layout_constraintBottom_toTopOf="@+id/searchDogImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/searchDogImage"
        android:layout_width="0dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.24"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/likeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="Take"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDogImage"
        app:layout_constraintVertical_bias="0.833" />

    <Button
        android:id="@+id/dislikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:text="Toss"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.319"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDogImage"
        app:layout_constraintVertical_bias="0.833" />

    <TextView
        android:id="@+id/rasseHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="Rasse:"
        app:layout_constraintBottom_toTopOf="@+id/geschlechtHeadline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchDogImage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/papiereHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="24dp"
        android:text="Papiere:"
        app:layout_constraintBottom_toTopOf="@+id/dislikeButton"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/geschlechtHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="32dp"
        android:text="Geschlecht:"
        app:layout_constraintBottom_toTopOf="@+id/AlterHeadline"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/AlterHeadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginLeft="48dp"
        android:layout_marginBottom="32dp"
        android:text="Alter:"
        app:layout_constraintBottom_toTopOf="@+id/papiereHeadline"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/rasseTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/rasseHeadline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toEndOf="@+id/geschlechtHeadline"
        app:layout_constraintTop_toTopOf="@+id/rasseHeadline"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/geschlechtTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/rasseTextView"
        app:layout_constraintStart_toStartOf="@+id/rasseTextView"
        app:layout_constraintTop_toBottomOf="@+id/rasseTextView" />

    <TextView
        android:id="@+id/alterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/geschlechtTextView"
        app:layout_constraintStart_toStartOf="@+id/geschlechtTextView"
        app:layout_constraintTop_toBottomOf="@+id/geschlechtTextView" />

    <TextView
        android:id="@+id/papierTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/alterTextView"
        app:layout_constraintStart_toStartOf="@+id/alterTextView"
        app:layout_constraintTop_toBottomOf="@+id/alterTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>